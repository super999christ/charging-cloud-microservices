{
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "projects": {
    "logger-service": {
      "type": "application",
      "root": "apps/logger",
      "entryFile": "main",
      "sourceRoot": "apps/logger/src",
      "compilerOptions": {
        "tsConfigPath": "apps/logger/tsconfig.app.json"
      }
    },
    "api-auth-service": {
      "type": "application",
      "root": "apps/api-auth",
      "entryFile": "main",
      "sourceRoot": "apps/api-auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-auth/tsconfig.app.json"
      }
    },
    "notification-service": {
      "type": "application",
      "root": "apps/notification",
      "entryFile": "main",
      "sourceRoot": "apps/notification/src",
      "compilerOptions": {
        "tsConfigPath": "apps/notification/tsconfig.app.json"
      }
    }
  }
}